@model Directory.Models.Person

<form method="post" asp-controller="Person" asp-action="Edit">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Personal Edit Page</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="text" asp-for="Name" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LastName"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="text" asp-for="LastName" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Gender"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="text" asp-for="Gender" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Number"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="text" asp-for="Number" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="City"></label>
                    </div>
                    <br />
                    <div class="col-8">
                        <input class="form-control" type="text" asp-for="City" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="text" asp-for="Description" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a class="btn btn-primary" asp-controller="Person" asp-action="Index">Get Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>