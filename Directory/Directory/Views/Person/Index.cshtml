@model IEnumerable<Directory.Models.Person>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Person List</h2>  
            
            <form action="/person/index" method="get"class="form-inline">
                <input type="text" name="q" class="form-control mr-2" />
                <button type="submit" class="btn btn-warning mr-0">BUL</button>
            </form>


            @if (Model.Count() == 0)
            {
                <h2>No Personal Found</h2>
            }
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-success" asp-action="Create" asp-controller="Person">
                Create New Person
            </a>
        </div>
    </div>
</div>
<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    LastName
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Number
                </th>
                <th>
                    City
                </th>
                <th>
                    <a>CV</a>
                </th>
                <th>
                    Transactions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.LastName</td>
                    <td>@item.Gender</td>
                    <td>@item.Number</td>
                    <td>@item.City</td>
                    <td>
                        <a asp-controller="Person" asp-action="Details" asp-route-id="@item.Id">CV</a>
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Person" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Person" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>

                </tr>
            }

        </tbody>

    </table>

}


